{{>banner}}

<body>
    <div class="form_info_user">


        <form class="infoUser-form" action="/users/updateUser" method="POST">

            <h1 class="title">Thông tin khách hàng</h1>

            <div class="form_info">
                {{!-- fghjkl --}}
                <p><input class="img-info" type="file" accept="image/*" name="imagePath" id="file"
                        onchange="loadFile(event)" style="display: none;"></p> 
                {{!--  sdfgh --}}
                <img class="img-info" id="output" alt="Image" />
                 <p><label class="Upload" for="file"></label></p>
                <div class="row_info">
                    <label class="info">Full name</label>
                    <input class="input_info" type="text" name="fullName" value="{{fullName}}">
                </div>
                <div class="row_info">
                    <label class="info">Birthday</label>
                    <input class="input_info" type="date" name="birthDate" value={{birthDate}}>
                </div>
                <div class="row_info">
                    <label class="info">Phone</label>
                    <input class="input_info" type="text" name="phone" value={{phone}}>
                </div>
                <div class="row_info">
                    <label class="info">Email</label>
                    <input class="input_info" type="email" name="email" value={{email}}>
                </div>
                <input class="Update" value="Update" type="submit">
            </div>

        </form>
    </div>
    <script>
                    var loadFile = function (event) {
                        var image = document.getElementById('output');
                        image.src = URL.createObjectURL(event.target.files[0]);
                    };
                   
                </script>
</body>